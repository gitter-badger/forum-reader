<%
activity = true

activity = false if target == :email && !current_account.email_confirmed?
activity = false if target == :jabber && !current_user.jabber_confirmed?
%>


<% if !activity %>
  <sup class="active-info"><%= t '.not_activated' %></sup>

  <%= link_to(t('.activate'), "todo",
              method: :post,
              remote: true,
              class: "activate #{target}") %>
<% end %>
