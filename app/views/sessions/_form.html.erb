<%= form_tag sessions_path do %>
  <%= render 'shared/errors' %>

  <div class="holder-form">
    <div class="field">
      <%= label_tag :email, Account.human_attribute_name(:email) %>
      <%= email_field_tag :email, nil, autofocus: true %>
    </div>

    <div class="field">
      <%= label_tag :password, Account.human_attribute_name(:password) %>
      <%= password_field_tag :password %>
    </div>

    <%= render layout: 'shared/submit_tag' do %>
      <ul class="links">
        <li><%= link_to t('sessions.form.links.register') + '!!', new_account_path %></li>
        <li><%= link_to t('sessions.form.links.forgot_password'), reset_password_path %></li>
      </ul>
    <% end %>

  </div>
<% end %>
