<%= form_for(@account) do |f| %>
  <%= render "shared/errors", instance: @account %>

  <div class="holder-form">
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>

    <% if !register?(params) %>
      <%= render 'users/form', account_form: f %>
    <% end %>

    <%= render 'shared/submit_tag' %>
  </div>
<% end %>
