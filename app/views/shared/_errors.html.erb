<%# Ошибки в форме %>
<%
errors_in_instance = defined?(instance) &&
  instance&.errors&.any?
%>

<div class="errors">
  <% if errors_in_instance || flash[:alert].present? %>

    <% if Rails.env.test? %>
      <h3><%= t('form.errors') %> :</h3>
    <% end %>

    <ul>

      <% if errors_in_instance %>
        <% instance.errors.full_messages.each do |msg| %>
          <li><%= msg.html_safe %></li>
        <% end %>
      <% end %>


      <% if flash[:alert].present? %>
        <li><%= flash[:alert].html_safe %></li>
      <% end %>

    </ul>

  <% end %>
</div>
